<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/delay_btn"
            style="@style/ButtonStyle"
            android:text="delay"/>

        <Button
            android:id="@+id/doOnEach_btn"
            style="@style/ButtonStyle"
            android:text="doOnEach"/>

        <Button
            android:id="@+id/doOnNext_btn"
            style="@style/ButtonStyle"
            android:text="doOnNext"/>

        <Button
            android:id="@+id/doAfterNext_btn"
            style="@style/ButtonStyle"
            android:text="doAfterNext"/>

        <Button
            android:id="@+id/doOnComplete_btn"
            style="@style/ButtonStyle"
            android:text="doOnComplete"/>

        <Button
            android:id="@+id/doOnError_btn"
            style="@style/ButtonStyle"
            android:text="doOnError"/>

        <Button
            android:id="@+id/doOnSubscribe_btn"
            style="@style/ButtonStyle"
            android:text="doOnSubscribe"/>

        <Button
            android:id="@+id/doOnDispose_btn"
            style="@style/ButtonStyle"
            android:text="doOnDispose"/>

        <Button
            android:id="@+id/doOnLifecycle_btn"
            style="@style/ButtonStyle"
            android:text="doOnLifecycle"/>

        <Button
            android:id="@+id/doOnTerminate_btn"
            style="@style/ButtonStyle"
            android:text="doOnTerminate"/>

        <Button
            android:id="@+id/doFinally_btn"
            style="@style/ButtonStyle"
            android:text="doFinally"/>

        <Button
            android:id="@+id/onErrorReturn_btn"
            style="@style/ButtonStyle"
            android:text="onErrorReturn"/>

        <Button
            android:id="@+id/onErrorResumeNext_btn"
            style="@style/ButtonStyle"
            android:text="onErrorResumeNext"/>

        <Button
            android:id="@+id/onExceptionResumeNext_btn"
            style="@style/ButtonStyle"
            android:text="onExceptionResumeNext"/>

        <Button
            android:id="@+id/retry_btn"
            style="@style/ButtonStyle"
            android:text="retry"/>

        <Button
            android:id="@+id/retryUntil_btn"
            style="@style/ButtonStyle"
            android:text="retryUntil"/>

        <Button
            android:id="@+id/retryWhen_btn"
            style="@style/ButtonStyle"
            android:text="retryWhen"/>

        <Button
            android:id="@+id/repeat_btn"
            style="@style/ButtonStyle"
            android:text="repeat"/>

        <Button
            android:id="@+id/repeatWhen_btn"
            style="@style/ButtonStyle"
            android:text="repeatWhen"/>

        <Button
            android:id="@+id/subscribeOn_btn"
            style="@style/ButtonStyle"
            android:text="subscribeOn"/>

        <Button
            android:id="@+id/observeOn_btn"
            style="@style/ButtonStyle"
            android:text="observeOn"/>

    </LinearLayout>

</ScrollView>